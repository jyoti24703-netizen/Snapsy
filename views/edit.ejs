<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="container py-4">

    <h2>Edit Post</h2>

    <form action="/update/<%= post._id %>" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Caption</label>
        <input type="text" class="form-control" name="filecaption" value="<%= post.imageText %>">
      </div>

      <% if (post.image) { %>
        <p>Current Image:</p>
        <img src="/images/uploads/<%= post.image %>" class="img-fluid mb-3">
      <% } else if (post.video) { %>
        <p>Current Video:</p>
        <video width="300" controls>
          <source src="/images/uploads/<%= post.video %>" type="video/mp4">
        </video>
      <% } %>

      <div class="mb-3">
        <label class="form-label">Replace file (optional)</label>
        <input type="file" class="form-control" name="file">
      </div>

      <button type="submit" class="btn btn-success">Update</button>
      <a href="/profile" class="btn btn-secondary">Cancel</a>
    </form>

  </body>
</html>
